    public PasesEntradas(Cliente cliente, Object cine, Object pelicula, JFrame Vanterior){
        initComponents();
        this.cliente = cliente;
        this.Vanterior = Vanterior;
        
        System.out.println("Cliente: " + this.cliente);
        System.out.println("Cine: " + cine);
        System.out.println("Pelicula: " + pelicula);
        comboPase.removeAllItems();
        
        for(Object item : this.cliente.consultarPases(cine, pelicula))
        {
            comboPase.addItem(item.toString());
        };   
        
        comboNumeroEntradas.removeAllItems();
        for(int i = 1 ; i <= 8; i++)
        {
            comboNumeroEntradas.addItem(Integer.toString(i));
        }
    }
    


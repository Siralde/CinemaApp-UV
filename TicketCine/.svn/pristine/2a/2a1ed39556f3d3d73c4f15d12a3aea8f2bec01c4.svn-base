    private void cmb_cinesActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_cmb_cinesActionPerformed
        
        list_pelis.clearSelection();
        
        try
        {
            Object cine = cmb_cines.getSelectedItem();
            gerente.setCineAct(cine); //Guardar cine seleccionado
            ArrayList pelisNuevas = gerente.consultarPelisNuevas();
            
            listModel = new DefaultListModel();
            
            
            for(Object p : pelisNuevas)
                listModel.addElement(p);
            
            list_pelis.setModel(listModel); 
        }
        catch(Exception e)
        {
            System.out.println("ERROR EN ESTRENAR PELICULAS 1: " + e.getMessage());
        }
        
    }//GEN-LAST:event_cmb_cinesActionPerformed
    

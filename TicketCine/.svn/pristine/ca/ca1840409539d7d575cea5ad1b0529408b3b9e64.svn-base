    private void ActualizarDatos() {
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy/MM/dd");
        String fechaEstreno = sdf.format(this.peliculaSeleccionada.getFechaEstreno());
        
        this.labelCalificacion.setText( Integer.toString(this.peliculaSeleccionada.getCalificacion()) );
        this.labelDirector.setText(this.peliculaSeleccionada.getDireccion());
        this.labelTitulo.setText(this.peliculaSeleccionada.getTitulo());
        this.labelGenero.setText(this.peliculaSeleccionada.getGenero());
        this.labelInterpretes.setText(this.peliculaSeleccionada.getInterpretes());
        this.labelFechaEstreno.setText(fechaEstreno);
        this.labelSinopsis.setText(this.peliculaSeleccionada.getSinopsis());
    }

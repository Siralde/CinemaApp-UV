    private void botonElegirPeliculaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_botonElegirPeliculaActionPerformed
        
        // System.out.println("Cambio a ConsultarCartelera2 ");
        
        
        if(listCines.getSelectedValue() != null)
        {
            
            ConsultarCines2 ccines2 = new ConsultarCines2(usuarioNoRegistrado, listCines.getSelectedValue(), this);
            ccines2.setVisible(true);
            this.setVisible(false);
        }
        else
        {
            JOptionPane.showMessageDialog(this, "Elige un cine");
        }
    }//GEN-LAST:event_botonElegirPeliculaActionPerformed


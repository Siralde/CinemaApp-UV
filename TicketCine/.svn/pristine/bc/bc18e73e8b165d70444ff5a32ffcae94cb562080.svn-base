    private void comboProvinciasActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_comboProvinciasActionPerformed
        
        // Falta arreglar que cuando se cambie de Provincia se quite la seleccion anterior
        listCines.clearSelection();
        
        try
        {
            Object provincia = comboProvincias.getSelectedItem();
            //System.out.println("class: "+ comboProvincias.getSelectedItem().toString());
           
            DefaultListModel listaCinesModelo = new DefaultListModel();
         
            ArrayList cines = usuarioNoRegistrado.consultarCines(provincia);
            
            if(cines.isEmpty())
            {
                System.out.println("No hay Cines");
            }
            else
            {
                 for(Object item : cines)
                {
                    //System.out.println("Cine: " + item);
                    listaCinesModelo.addElement(item);
                };
                listCines.setModel(listaCinesModelo); 
            }
        }
        catch(Exception e)
        {
            System.out.println("ERROR EN CONSULTAR CINE 1, Puede que sea el initComponent, que al principio el getselecteditem es null "
                    + " Y luego el error viene porque consultarCines devuelve null:" + e.getMessage());
        }
    }//GEN-LAST:event_comboProvinciasActionPerformed

    private void listCinesValueChanged(javax.swing.event.ListSelectionEvent evt) {//GEN-FIRST:event_listCinesValueChanged
        Object cineAct = listCines.getSelectedValue();
        
        if(cineAct != null)
        {
            /*
            System.out.println("Lista tocada " + listCines.getSelectedValue());
            */
            
            ActualizarDatos(this.usuarioNoRegistrado.consultarDetallesCine(cineAct));
        }
    }//GEN-LAST:event_listCinesValueChanged

   
    private void ActualizarDatos(DetallesCine detallesCine) {
        this.labelNombreCine.setText(detallesCine.nombre);
        this.labelCalle.setText("C/ "+detallesCine.direccion);
        this.labelDireccion.setText(detallesCine.cp+" "+detallesCine.poblacion);
        this.labelTelefono.setText(detallesCine.tlf);
    }



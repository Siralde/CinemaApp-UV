        this.usuarioNoRegistrado = usuarioNoRegistrado;
        
        DefaultListModel listaPeliculasModelo = new DefaultListModel();
        for(Object item : usuarioNoRegistrado.consultarCartelera(cine))
        {
            listaPeliculasModelo.addElement(item);
        };
        listPeliculas.setModel(listaPeliculasModelo);    
        
    }


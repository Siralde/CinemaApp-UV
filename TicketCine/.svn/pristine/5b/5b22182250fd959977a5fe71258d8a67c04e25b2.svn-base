    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        
        String comentario = jTextArea1.getText();
        
        Critica critica = new Critica(comentario);
        
        int index= jList1.getSelectedIndex();
        //System.out.println(index);
        
        if(index >= 0)
        {
            cliente.realizarCritica(index, critica);
        }
        
        Compra compra_aux = (Compra)cliente.consultarCompras(index);
        System.out.println(compra_aux.getPase().getPelicula().getCritica().getComentario());
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jList1ValueChanged(javax.swing.event.ListSelectionEvent evt) {//GEN-FIRST:event_jList1ValueChanged
        
        int index= jList1.getSelectedIndex();
        
        Compra compra_aux = (Compra)cliente.seleccionarCompra(index);
        
        jLabel2.setText(compra_aux.getPase().getPelicula().getTitulo());
        jLabel3.setText(compra_aux.getPase().getFecha().toString());
        jLabel4.setText("Sala " + compra_aux.getPase().getSala().getSala() + " a las " + compra_aux.getPase().getHora().toString() + " h");
        jLabel5.setText("Nº de entradas: " + compra_aux.getN_entradas());
        jLabel7.setText(compra_aux.getPase().getCine().toString());
        jLabel8.setText(compra_aux.getPase().getCine().getDireccion());
        jLabel9.setText(compra_aux.getPase().getCine().getCP() + " " + compra_aux.getPase().getCine().getPoblacion());
        jLabel10.setText("Tlf: " + compra_aux.getPase().getCine().getTlfn());
    }//GEN-LAST:event_jList1ValueChanged




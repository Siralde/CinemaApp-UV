    public ConsultarCompras(Cliente cliente, JFrame Vanterior) {
        initComponents();
        this.cliente = cliente;
        this.vAnterior = Vanterior;
        
        modeloLista = new DefaultListModel();
        jList1.setModel(modeloLista);
        
        for(int i = 0; i < cliente.getCompras().size(); i++)
        {
            Compra compra_aux = (Compra)cliente.consultarCompras(i);
            modeloLista.addElement(compra_aux.getPase().getPelicula().getTitulo());
        }
    }

